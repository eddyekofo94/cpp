/* tasks.json */
{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Build: Clang",
        "type": "shell",
        "command": "clang",
        "args": [
            "-std=c++17",
            "-stdlib=libc++",
            "./src/main.cpp",
            "-o",
            "./bin/main.out",
            "--debug"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "build with clang++",
        "command": "clang++",
        "args": [
            "-o",
            "./src/main",
            "./src/main.cpp",
            "-g",
            "-v"
        ],
        "type": "shell",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "shared"
        },
        "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }
    },
    {
        "label": "wsl-cpptools: build",
        "type": "shell",
        "command": "g++",
        "args": [
            "-g",
            "-o",
            "/mnt/c/Users/eekofo/Documents/cpp/cppUdemy/bin/main",
            "./src/main.cpp"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
            "$gcc"
        ]
    },
    {
        "label": "Makefile: build",
        "type": "shell",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "command": "bash",
        "args": [
            "-c",
            "make run"
        ],
        "problemMatcher": [
            "$gcc"
        ]
    },
    {
        "label": "Makefile-build & run",
        "type": "shell",
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "windows": {
            "command": "bash"
        },
        "linux": {
            "command": "bash"
        },
        "args": [
            "-c",
            "make run"
        ]
    },
    {
        "label": "Makefile: clean",
        "type": "shell",
        "windows": {
            "command": "bash"
        },
        "linux": {
            "command": "bash"
        },
        "args": [
            "-c",
            "make clean"
        ]
    }
]
}
